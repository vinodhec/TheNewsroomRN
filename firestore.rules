    // requests to your Firestore database will be denied.
    //
    // Make sure to write security rules for your app before that time, or else
    // your app will lose access to your Firestore database
    match /{document=**} {
      allow read;
      allow write : if request.auth != null && (request.auth.token.email =="vinodhec@gmail.com" || request.auth.token.email =="neelakandan.236@gmail.com") && request.auth.token.email_verified ;
    }
     match /newstest/{id} {
